package chess2;

import java.util.ArrayList;

/**
 *
 * @author vshah-21
 */
public class Player {
    Board board; 
    Pawn[] pawns;
    Rook[] rooks;
    Bishop[] bishops;
    Knight[] knights;
    King king; 
    Queen queen;
    ArrayList<Integer> movesX = new ArrayList<>();
    ArrayList<Integer> movesY = new ArrayList<>();
    public Player(){
        
    }
    public Player(Board board, Pawn[] pawns, Rook[] rooks, Bishop[] bishops, Knight[] knights,King king, Queen queen) {
        this.board = board;
        this.pawns = pawns;
        this.rooks = rooks;
        this.bishops = bishops;
        this.knights = knights;
        this.king = king;
        this.queen = queen;
    }
    public void setAlives(){
        for(int i =0; i  <8; i++){
            pawns[i].controlledOff = true;
        }
        for(int i =0; i < 2; i++){
            rooks[i].controlledOff = true;
            bishops[i].controlledOff = true;
            knights[i].controlledOff = true;
        }
        king.controlledOff = true;
        queen.controlledOff = true;
    }
    public void updateLegals(){
        for(int i =0; i < 8; i++){
            pawns[i].checkLegalMove();
        }
        for(int i =0;i < 2; i++){
            knights[i].checkLegalMove();
            bishops[i].checkLegalMove();
            rooks[i].checkLegalMove();
        }
        queen.checkLegalMove();
        king.checkLegalMove();
    }
    public void deleteMoves(){
        for(int i =0; i < 8; i++){
            pawns[i].deleteMoves();
        }
        for(int i =0;i < 2; i++){
            knights[i].deleteMoves();
            bishops[i].deleteMoves();
            rooks[i].deleteMoves();
        }
        queen.deleteMoves();
        king.deleteMoves();
    
    }
    public void checkMoves(){
        deleteMoves();
        updateLegals();
        for(int i =0; i < 8;i++){
            setLocation(pawns[i]);
        }
        for(int i=0;i<2;i++){
            setLocation(rooks[i]);
            setLocation(knights[i]);
            setLocation(bishops[i]);
        }
        setLocation(king);
        setLocation(queen);
    }
    public void setLocation(Piece piece){
        for(int i =0; i < piece.getMovesX().size();i++){
            movesX.add(piece.getMovesX().get(i));
            movesY.add(piece.getMovesY().get(i));
        }
    }
}
